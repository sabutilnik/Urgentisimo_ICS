<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<!-- <ScrollView android:id="@+id/ScrollView02" -->
	<!-- android:layout_width="fill_parent" android:layout_height="wrap_content"> -->

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<ImageView android:layout_width="wrap_content" android:src="@drawable/grupo"
			android:id="@+id/imageView1" android:layout_height="wrap_content"></ImageView>


		<TextView android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="El Nombre"
			android:id="@+id/nombre"
			 />
		<ImageButton android:layout_height="wrap_content"
			android:id="@+id/imageButton1" android:layout_width="wrap_content"
			android:src="@drawable/add_group"
			android:onClick="addGrupo"
			/>
		<ImageButton android:layout_height="wrap_content"
			android:id="@+id/imageButton2" android:layout_width="wrap_content"
			android:src="@drawable/delete_group"></ImageButton>

	</LinearLayout>

	<ScrollView android:id="@+id/scrollView1"
		android:layout_height="wrap_content" android:layout_width="match_parent">
		<LinearLayout android:id="@+id/listaAlumnosEditaGrupo"
			android:layout_width="match_parent" android:layout_height="match_parent"
			android:orientation="vertical">
		</LinearLayout>
	</ScrollView>
	<!-- <Button android:text="Guardar" android:id="@+id/button1" -->
	<!-- android:layout_width="wrap_content" android:layout_height="wrap_content"></Button> -->
	<!-- </ScrollView> -->
</LinearLayout>